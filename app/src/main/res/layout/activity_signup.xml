<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/materialOrange400"
    android:background="@color/materialOrange400">
    <TextView
        android:id="@+id/textView_activity_signup_messageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/signup_message_title"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/textView_activity_signup_messageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/signup_message_body"
        android:layout_below="@id/textView_activity_signup_messageTitle"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"/>
    <EditText
        android:id="@+id/editText_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:hint="@string/username_field"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/textView_activity_signup_messageBody"
        />
    <!-- TODO: aggiungere un color picker o un profile picture -->
    <Button
        android:id="@+id/button_signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/button"
        android:text="@string/signup_button"
        android:textColor="@color/colorWhite"
        />
</RelativeLayout>