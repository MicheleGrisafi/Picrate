<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_item_filters_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:padding="@dimen/margin_small"
    android:backgroundTint="@color/colorWhite">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_item_filters_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_item_filters_filterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center_horizontal|center"
            android:text="Filter x"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/currency_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="@dimen/margin_extra_small"
            android:src="@drawable/ic_attach_money_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_item_filters_filterCost"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_filters_filterName" />

        <TextView
            android:id="@+id/textView_item_filters_filterCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_small"
            app:layout_constraintBottom_toBottomOf="@+id/currency_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/currency_icon"
            app:layout_constraintTop_toTopOf="@+id/currency_icon" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
