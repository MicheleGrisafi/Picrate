<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small">
    <TextView
        android:id="@+id/textView_sessionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView_sessionData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/textView_sessionName"
        android:textSize="@dimen/font_size_small"/>
    <ProgressBar
        android:id="@+id/progressBar_item_leaderboardSessionList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_medalList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_sessionData"
        android:paddingTop="@dimen/margin_medium"/>

</RelativeLayout>