<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog_second_picture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_dialog_second_picture_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintLeft_toRightOf="@+id/imageView_dialog_second_picture_money"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_dialog_second_picture_money"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_dialog_second_picture_money"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/imageView_dialog_second_picture_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attach_money_yellow_24dp"
        app:srcCompat="@drawable/ic_attach_money_yellow_24dp"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialog_second_picture_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@+id/textView_dialog_second_picture_money"
        android:layout_marginEnd="@dimen/margin_small" />

    <TextView
        android:id="@+id/textView_dialog_second_picture_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/buy_second_picture"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_dialog_second_picture_closeButton" />

    <ImageButton
        android:id="@+id/imageButton_dialog_second_picture_closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_close_white_24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/margin_small"
        android:contentDescription="Close button" />

    <Button
        android:id="@+id/button_dialog_second_picture_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_second_picture"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@+id/imageView_dialog_second_picture_money"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_small"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>