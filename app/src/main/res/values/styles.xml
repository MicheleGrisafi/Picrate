<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/materialOrange400</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:listDivider">@color/colorLightGray</item>
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/materialOrange400</item>
        <item name="colorAccent">@color/materialOrange400</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:buttonBarButtonStyle">@drawable/button_style</item>
    </style>
</resources>
